<p id="notice"><%= notice %></p>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Permission:</b>
  <% if @user.is_admin? %>
    Admin
  <% else %>
    Competitor
  <% end %>
</p>

<% if current_user && current_user.is_admin? %>
  <%= link_to 'Edit', edit_admin_user_path(@user) %> |
<% else %>
  <%= link_to 'Edit', edit_user_path(@user) %>
<% end %>

<%= link_to 'Back', :back %>
